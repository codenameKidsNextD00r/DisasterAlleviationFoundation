@model DisasterAlleviationFoundationWebApp.Entity.FundDonation

<h4 id="container_header">Make Funds Donation</h4>
<hr />
<div id="card">

    <form asp-action="ProcessFundsDonation">
            <div asp-validation-summary="ModelOnly" id="text_danger"></div>
            <div class="form-group">
                <label asp-for="FDate" id="label">Date of Donation</label>
                <input asp-for="FDate" id="text_field" />
                <span asp-validation-for="FDate" id="text_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" id="label">Donation Amount</label>
                <input asp-for="Amount" id="text_field"  />
                <span asp-validation-for="Amount" id="text_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FDonorName" id="label">Donor Name (Opintional)</label>
                <input asp-for="FDonorName" id="text_field"  />
       
            </div>
            <div class="form-group">
                <input type="submit" value="Make Donation" id="login_button"/>
            </div>
        </form>
 
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

