@model DisasterAlleviationFoundationWebApp.Entity.User



<div class="row" id="login_container">
    <h4 id="container_header">Registration</h4>

    <form asp-action="ProcessSignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label" id="label"></label>
            <input asp-for="FirstName" class="form-control" type="text" id="text_field" />
            <span asp-validation-for="FirstName" class="text-danger" id="text_danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label" id="label"></label>
            <input asp-for="LastName" class="form-control" type="text" id="text_field" />
            <span asp-validation-for="LastName" class="text-danger" id="text_danger"></span>
        </div>
       
            <div class="form-group">
                <label asp-for="Email" class="control-label" id="label"></label>
                <input asp-for="Email" class="form-control" type="email"  id="text_field" />
                <span asp-validation-for="Email" class="text-danger" id="text_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" id="label"></label>
                <input asp-for="Password"  type="password" id="text_field" />
                <span asp-validation-for="Password" class="text-danger" id="text_danger" ></span>
            </div>
           
            <div class="form-group">
            <input type="submit" value="register" class="btn btn-primary" id="login_button" />
            </div>
        </form>
        <div>
            <p>Back to  <a asp-action="Login">Login</a></p>
        </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
